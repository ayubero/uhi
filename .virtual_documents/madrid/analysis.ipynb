df1['temp_diff'] = df1['temperature'].diff()
df1['swir2_diff'] = df1['swir2'].diff()
df1 = df1.dropna()
df1.head()


df2['temp_diff'] = df2['temperature'].diff()
df2['swir2_diff'] = df2['swir2'].diff()
df2 = df2.dropna()
df2.head()


